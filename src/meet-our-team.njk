<div class="bg-white">
  <div class="mx-auto py-12 px-4 max-w-7xl sm:px-6 lg:px-8 lg:py-24">
    <div class="space-y-12">
      <div class="">
        <ul role="list" class="space-y-12 divide-y divide-gray-200 -mt-8 lg:gap-x-8 lg:space-y-0">

          {%- set persons = collections.people | first %}
          {%- for person in persons.data.members -%}
            <li class="py-16 md:py-24">
              <div class="space-y-4 sm:grid md:grid-cols-3 sm:items-start sm:gap-6 sm:space-y-0">
                <div class="h-full mb-12 md:mb-0 flex md:flex-col justify-center">
                  {% image person.image, "{{person.name}}", "object-cover
                  rounded-full shadow-lg h-32 w-32 md:h-48 md:w-48 lg:h-64 lg:w-64" %}
                </div>
                <div class="md:col-span-2">
                  <div class="space-y-4">
                    <div class="text-2xl leading-6 font-medium space-y-1">
                      <h3>{{person.name}}</h3>
                      <p class="text-lg text-primary-600">{{person.job_title}}</p>
                    </div>
                    <div class="text-lg text-gray-500 flex-col space-y-4">
                      {{person.body | markdown | safe}}
                    </div>
                  </div>
                </div>
              </div>
            </li>
          {%- endfor -%}
        </ul>
      </div>
    </div>
  </div>
</div>

